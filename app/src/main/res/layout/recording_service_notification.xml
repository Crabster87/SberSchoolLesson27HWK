<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notification_record_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@id/notification_stop_button"
        android:src="@drawable/ic_baseline_fiber_manual_record_24" />

    <ImageView
        android:id="@+id/notification_stop_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@id/notification_timer"
        android:src="@drawable/ic_baseline_stop_24" />

    <TextView
        android:id="@+id/notification_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:text="@string/_00_00_00"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/recording_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/notification_timer"
        android:text="@string/recording"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:visibility="invisible" />

</RelativeLayout>